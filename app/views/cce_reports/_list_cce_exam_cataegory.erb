<%unless params[:batch_id].blank?%>
<div class="label-field-pair">
    <label for="batch_id">Select Term</label>
    <div class="text-input-bg margin-left-10">
      <%= select :cce_exam_category,:cce_exam_category_id,
        @cce_categories.map {|b| [b.name, b.id]},
        {:prompt => "All  "},
        {:onChange => "#{remote_function(:url => {:action => "student_wise_report"},
        :with => "'cat_id='+ value+'&batch_id='+#{@batch.id}+'&ref_from=student_list'",
        :before => "Element.show('loader')",
        :success => "Element.hide('loader')"
        )}"} %>
        <%= image_tag("loader.gif",
        :align => "absmiddle",
        :border => 0,
        :id => "loader",
        :style =>"display:none") %>
    </div>
  </div>
<%end%>